<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_back_half"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/background_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_aboutparticipant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="150px"
        android:text="about study participant"
        android:textColor="@color/white"
        android:textSize="80px"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_gps"
        android:layout_width="300dp"
        android:layout_height="460dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/window_view"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_aboutparticipant" />

    <TextView
        android:id="@+id/subtitle_subjectID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="4dp"
        android:paddingTop="14dp"
        android:text="subject ID"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toTopOf="@+id/view_gps" />

    <TextView
        android:id="@+id/text_subjectID"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="332dp"
        android:elevation="4dp"
        android:text=""
        android:textColor="@color/grey"
        android:paddingTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_subjectID"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/subtitle_age"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:text="age"
        android:textStyle="bold"
        android:paddingTop="14dp"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/text_subjectID" />

    <TextView
        android:id="@+id/text_age"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="288dp"
        android:elevation="4dp"
        android:text=""
        android:textColor="@color/grey"
        android:paddingTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_age"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/subtitle_gender"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:text="gender"
        android:textStyle="bold"
        android:paddingTop="14dp"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/text_age" />

    <TextView
        android:id="@+id/text_gender"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:paddingTop="2dp"
        android:text=""
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_gender" />

    <TextView
        android:id="@+id/subtitle_groupuuid"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:text="group UUID"
        android:textStyle="bold"
        android:paddingTop="14dp"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/text_gender" />

    <TextView
        android:id="@+id/text_groupuuid"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="208dp"
        android:elevation="4dp"
        android:text=""
        android:textColor="@color/grey"
        android:paddingTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_groupuuid"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/subtitle_version"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:text="android version"
        android:textStyle="bold"
        android:paddingTop="14dp"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/text_groupuuid" />

    <TextView
        android:id="@+id/text_version"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="168dp"
        android:elevation="4dp"
        android:text=""
        android:textColor="@color/grey"
        android:paddingTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_version"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/subtitle_start"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:paddingTop="14dp"
        android:text="start of study"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/text_version" />

    <TextView
        android:id="@+id/text_start"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:paddingTop="2dp"
        android:text=""
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_start" />

    <TextView
        android:id="@+id/subtitle_end"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:paddingTop="14dp"
        android:text="end of study"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/text_start" />

    <TextView
        android:id="@+id/text_end"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:paddingTop="2dp"
        android:text=""
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/view_gps"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/view_gps"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_end" />

    <Button
        android:id="@+id/bt_back_participant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:text="back"
        android:textStyle="bold"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_gps"
        app:layout_constraintVertical_bias="0.567" />


</androidx.constraintlayout.widget.ConstraintLayout>